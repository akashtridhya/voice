        async function StatusActive(id, value) {
            if (value == "true") {
                var model = {
                    Id: id,
                    Active: false,
                    Deleted: false
                }
                const url = rootUrl + "/General/CountryStatusOrDelete";
                await doAjax(url, model, "POST");
            }
            else {
                var model = {
                    Id: id,
                    Active: true,
                    Deleted: false
                }
                const url = rootUrl + "/General/CountryStatusOrDelete";
                await doAjax(url, model, "POST");
            }
        }

        async function CountryDelete(id) {
            var x = confirm("Are you sure you want to delete?");
            if (x) {
                var model = {
                    Id: id,
                    Active: false,
                    Deleted: true
                }
                const url = rootUrl + "/General/CountryStatusOrDelete";
                await doAjax(url, model, "POST");
                location.reload();
            }
            else
                return false;
        }

        $('#exampleModalCustomScrollable').on('show.bs.modal', function (e) {
            var id = $(e.relatedTarget).data('id');
            $(e.currentTarget).find('input[name="id"]').val(id);

            var countryName = $(e.relatedTarget).data('name');
            $(e.currentTarget).find('input[name="name"]').val(countryName);

            var countryCode = $(e.relatedTarget).data('code');
            $(e.currentTarget).find('input[name="code"]').val(countryCode);

            var selectedlanguage = $(e.relatedTarget).data('language');
            if (selectedlanguage != null) {
                var languages = selectedlanguage.split(",");
                $("#languageDropdown").val(languages);
            }
            else
                $("#languageDropdown").val("");

            var SelectedCurrency = $(e.relatedTarget).data('currency');
            if (SelectedCurrency != null) {
                var currencies = SelectedCurrency.split(",");
                $("#currencyDropdown").val(currencies);
            }
            else
                $("#currencyDropdown").val("");
        });

        async function updateCountry() {
            var model = {
                id: $("input[name=id]").val(),
                country: $("input[name=name]").val(),
                countryCode: $("input[name=code]").val(),
                selectedLanguage: $("#languageDropdown").val(),
                selectedCurrency: $("#currencyDropdown").val()
            }
            const url = rootUrl + "/General/CountryPersist";
            await doAjax(url, model, "POST");
            $('#exampleModalCustomScrollable').modal('toggle');
            location.reload();
        }

        async function addBonus() {
            var model = {
                country: $("input[name=name]").val(),
                countryCode: $("input[name=code]").val()
            }
            const url = rootUrl + "/General/CountryPersist";
            await doAjax(url, model, "POST");
            $('#exampleModalCustomScrollable').modal('toggle');
            location.reload();
        }

        async function languageDropdown() {
            const url = rootUrl + "/General/GetLanguage";
            var result = await doAjaxWithReturnData(url, null, "Get");
            for (i = 0; i < result.length; i++) {
                var rows =
                    "<option value='" + result[i].id + "'>" + result[i].language + "</option>"
                $("#languageDropdown").append(rows)
            };
        }

        async function currencyDropdown() {
            const url = rootUrl + "/General/GetCurrency";
            var result = await doAjaxWithReturnData(url, null, "Get");
            for (i = 0; i < result.length; i++) {
