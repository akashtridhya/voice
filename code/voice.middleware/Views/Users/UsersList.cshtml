@section footer{
    <script>
        (() => {
            "use strict";
            var __webpack_exports__ = {};
            /*!****************************************************************!*\
              !*** ../demo1/src/js/pages/crud/ktdatatable/base/data-json.js ***!
              \****************************************************************/

            // Class definition

            var KTDatatableJsonRemoteDemo = function () {
                // Private functions

                // basic demo
                var demo = function () {
                    var datatable = $('#kt_datatable').KTDatatable({
                        // datasource definition
                        data: {
                            type: 'remote',
                            source: rootUrl + '/Users/GetUsers',
                            pageSize: 10,
                        },

                        // layout definition
                        layout: {
                            scroll: false, // enable/disable datatable scroll both horizontal and vertical when needed.
                            footer: false // display/hide footer
                        },

                        // column sorting
                        sortable: true,

                        pagination: true,

                        search: {
                            input: $('#kt_datatable_search_query'),
                            key: 'generalSearch'
                        },

                        // columns definition
                        columns: [{
                            field: 'No',
                            title: '#',
                            width: 30,
                            type: 'number',
                            textAlign: 'left',
                            template: function (data) {
                                return '<span class="font-weight-bolder">' + data.number + '</span>';
                            }
                        }, {
                            field: 'Username',
                            title: 'Username',
                            width: 100,
                            template: function (data) {
                                var output = '';
                                output = '<div class="d-flex align-items-center">\
                                                                                                      <div class="ml-4">\
                                                                                                      <div class="text-dark-75 font-weight-bolder font-size-lg mb-0">' + data.username + '</div>\
                                                                                                      </div>\
                                                                                                      </div>';
                                return output;
                            }
                        }, {
                            field: 'Customer',
                            title: 'Customer',
                            width: 240,
                            template: function (data) {
                                var output = '';
                                output = '<div class="d-flex align-items-center">\
                                                                                                  <div class="ml-4">\
                                                                                                  <div class="text-dark-75 font-weight-bolder font-size-lg mb-0">' + data.firstName + ' ' + data.lastName + '</div>\
                                                                                                  <a href="mailto:'+ data.email + '" class="text-muted font-weight-bold text-hover-primary">' + data.email + '</a>\
                                                                                                  </div>\
                                                                                                  </div>';
                                return output;
                            }
                        }, {
                            field: 'Balance',
                            title: 'Balance',
                            width: 75,
                            template: function (data) {
                                var output = '';
                                output = '<div class="d-flex align-items-center">\
                                                                                                   <div class="ml-4">\
                                                                                                      <div class="text-dark-75 font-weight-bolder font-size-lg mb-0">' + data.balance + '</div>\
                                                                                                      </div>\
                                                                                                      </div>';
                                return output;
                            }
                        }, {
                            field: 'XpTime',
                            title: 'XpTime',
                            width: 85,
                            template: function (data) {
                                var output = '';
                                output = '<div class="d-flex align-items-center">\
                                                                                                   <div class="ml-4">\
                                                                                                      <div class="text-dark-75 font-weight-bolder font-size-lg mb-0">' + data.xpTime + '</div>\
                                                                                                      </div>\
                                                                                                      </div>';
                                return output;
                            }
                        }, {
                            field: 'XpPoints',
                            title: 'XpPoints',
                            width: 85,
                            template: function (data) {
                                var output = '';
                                output = '<div class="d-flex align-items-center">\
                                                                                                   <div class="ml-4">\
                                                                                                      <div class="text-dark-75 font-weight-bolder font-size-lg mb-0">' + data.xpPoints + '</div>\
                                                                                                      </div>\
                                                                                                      </div>';
                                return output;
                            }
                        },
                        {
                            field: 'Level',
                            title: 'Level',
                            width: 115,
                            template: function (data) {
                                var output = '';
                                output = '<div class="d-flex align-items-center">\
                                                                                                   <div class="ml-4">\
                                                                                                      <div class="text-dark-75 font-weight-bolder font-size-lg mb-0">' + data.level + '</div>\
                                                                                                      </div>\
                                                                                                      </div>';
                                return output;
                            }
                        },

                        {
                            field: 'UserStatus',
                            title: 'User Status',
                            width: 65,
                            overflow: 'visible',
                            autoHide: false,
                            template: function (data) {
                                var val = (data.active == true ? "checked" : "");
                                return '<span class="switch switch-sm switch-icon">' +
                                    '<label>' +
                                    '<input onchange="StatusActive (\'' + data.id + '\',this.value)" ' + val + '  type="checkbox" name="select" value="' + data.active + '"/>' +
                                    '<span></span>' +
                                    '</label>' +
                                    '</span>'
                            },
                        }],
                    });

                    $('#kt_datatable_search_status').on('change', function () {
                        datatable.search($(this).val().toLowerCase(), 'Status');
                    });

                    $('#kt_datatable_search_type').on('change', function () {
                        datatable.search($(this).val().toLowerCase(), 'Type');
                    });

                    $('#kt_datatable_search_status, #kt_datatable_search_type').selectpicker();
                };

                return {
                    // public functions
                    init: function () {
                        demo();
                    }
                };
            }();

            jQuery(document).ready(function () {
                KTDatatableJsonRemoteDemo.init();
            });
        })();

        async function StatusActive(id, value) {
            if (value == "true") {
                var model = {
                    Id: id,
                    Active: false,
                    Deleted: false
                }
                const url = rootUrl + "/Users/UserStatusOrDelete";
                await doAjax(url, model, "POST");
            }
            else {
                var model = {
                    Id: id,
                    Active: true,
                    Deleted: false
                }
                const url = rootUrl + "/Users/UserStatusOrDelete";
                await doAjax(url, model, "POST");
            }
        }

        async function UserDelete(id, value) {
            if (value == "true") {
                var model = {
                    Id: id,
                    Active: false,
                    Deleted: false
                }
                const url = rootUrl + "/Users/UserStatusOrDelete";
                await doAjax(url, model, "POST");
            }
            else {
                var model = {
                    Id: id,
                    Active: true,
                    Deleted: false
                }
                const url = rootUrl + "/Users/UserStatusOrDelete";
                await doAjax(url, model, "POST");
            }
        }

        $('#exampleModalCustomScrollable').on('show.bs.modal', function (e) {
            var id = $(e.relatedTarget).data('id');
            $(e.currentTarget).find('input[name="id"]').val(id);

            var username = $(e.relatedTarget).data('username');
            $(e.currentTarget).find('input[name="username"]').val(username);

            var firstname = $(e.relatedTarget).data('firstname');
            $(e.currentTarget).find('input[name="firstname"]').val(firstname);

            var lastname = $(e.relatedTarget).data('lastname');
            $(e.currentTarget).find('input[name="lastname"]').val(lastname);

            var email = $(e.relatedTarget).data('email');
            $(e.currentTarget).find('input[name="email"]').val(email);

            var birthDate = $(e.relatedTarget).data('birthdate');
            $(e.currentTarget).find('input[name="birthDate"]').val(birthDate);

            var houseNumber = $(e.relatedTarget).data('housenumber');
            $(e.currentTarget).find('input[name="houseNumber"]').val(houseNumber);

            var postcode = $(e.relatedTarget).data('postcode');
            $(e.currentTarget).find('input[name="postcode"]').val(postcode)

            var address1 = $(e.relatedTarget).data('address1');
            $(e.currentTarget).find('input[name="address1"]').val(address1)

            var address2 = $(e.relatedTarget).data('address2');
            $(e.currentTarget).find('input[name="address2"]').val(address2)

            var address3 = $(e.relatedTarget).data('address3');
            $(e.currentTarget).find('input[name="address3"]').val(address3)

        });

        async function updateUser() {
            var model = {
                id: $("input[name=id]").val(),
                username: $("input[name=username]").val(),
                firstName: $("input[name=firstname]").val(),
                lastName: $("input[name=lastname]").val(),
                email: $("input[name=email]").val(),
                birthDate: $("input[name=birthDate]").val(),
                houseNumber: parseInt($("input[name=houseNumber]").val()),
                postcode: parseInt($("input[name=postcode]").val()),
                address1: $("input[name=address1]").val(),
                address2: $("input[name=address2]").val(),
                address3: $("input[name=address3]").val()
            }
            const url = rootUrl + "/Users/UserEdit";
            await doAjax(url, model, "POST");
            $('#exampleModalCustomScrollable').modal('toggle');
            location.reload();
        }

    </script>
}