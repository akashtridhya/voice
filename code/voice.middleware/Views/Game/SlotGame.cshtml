        async function StatusActive(id, value) {
            if (value == "true") {
                var model = {
                    Id: id,
                    Active: false,
                    Deleted: false
                }
                const url = rootUrl + "/Game/GameStatusOrDelete";
                await doAjax(url, model, "POST");
            }
            else {
                var model = {
                    Id: id,
                    Active: true,
                    Deleted: false
                }
                const url = rootUrl + "/Game/GameStatusOrDelete";
                await doAjax(url, model, "POST");
            }
        }

        async function GameDelete(id) {
            var x = confirm("Are you sure you want to delete?");
            if (x) {
                var model = {
                    Id: id,
                    Active: false,
                    Deleted: true
                }
                const url = rootUrl + "/Game/GameStatusOrDelete";
                await doAjax(url, model, "POST");
                location.reload();
            }
            else
                return false;
        }

        $('#exampleModalCustomScrollable').on('show.bs.modal', function (e) {
            var id = $(e.relatedTarget).data('id');
            $(e.currentTarget).find('input[name="id"]').val(id);

            var gameName = $(e.relatedTarget).data('name');
            $(e.currentTarget).find('input[name="name"]').val(gameName);

            var gameTag = $(e.relatedTarget).data('tag');
            $(e.currentTarget).find('input[name="tag"]').val(gameTag);

            var gameImage = $(e.relatedTarget).data('image');
            $(e.currentTarget).find('input[name="image"]').val(gameImage);
            document.getElementById('kt_user_edit_avatar').style.backgroundImage = 'url("' + gameImage + '")';
        });

        async function updateGame() {

            var fdata = new FormData();
            var fileInput = $('#imageUpload')[0];
            var file = fileInput.files[0];

            if (file != undefined || null) {
                fdata.append("File", file);
                const urlGame = rootUrl + "/Game/GameImage";
                var imageData = await doFormData(urlGame, fdata, "POST");
            }

            var model = {
                id: $("input[name=id]").val(),
                gameName: $("input[name=name]").val(),
                gameTag: $("input[name=tag]").val(),
                xpPointsid: $("#xpPointsDropdown").val(),
                gameCategory: 'slot',
                gameImageURL: (file != undefined || null) ? imageData.value : ($("input[name=id]").val() == "") ? 'game-placeholder.png' : $("input[name=image]").val(),
            }
            const url = rootUrl + "/Game/GamePersist";
            await doAjax(url, model, "POST");
            $('#exampleModalCustomScrollable').modal('toggle');
            location.reload();
        }

        async function addGame() {
            var model = {
                gameName: $("input[name=name]").val(),
                gameTag: $("input[name=tag]").val(),
                gameCategory: 'slot',
                gameImageURL: 'game-placeholder.png',
                File: $("input[name=gameImage]").val()
            }
            const url = rootUrl + "/Game/GamePersist";
            await doAjax(url, model, "POST");
            $('#exampleModalCustomScrollable').modal('toggle');
            location.reload();
        }

        async function xpPointsDropdown() {
            const url = rootUrl + "/XpPoints/GetXpPoints";
            var result = await doAjaxWithReturnData(url, null, "Get");
            for (i = 0; i < result.length; i++) {
                var rows =
                    "<option value='" + result[i].id + "'>" + result[i].xpValue + "</option>"
                $("#xpPointsDropdown").append(rows)
            };
        }

        async function LoadDropdown(val) {
            $("#xpPointsDropdown").val(val)
