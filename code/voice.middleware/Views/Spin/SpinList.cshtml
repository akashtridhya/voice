
@{
    ViewData["Title"] = "Spin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Card-->
        <div class="card card-custom">
            <!--begin::Header-->
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        Spin Management
                        <span class="d-block text-muted pt-2 font-size-sm">Spin management</span>
                    </h3>
                </div>
            </div>
            <!--end::Header-->
            <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
                <!--begin::Subheader-->
                <div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
                    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                        <!--begin::Details-->
                        <div class="d-flex align-items-center flex-wrap mr-2">
                            <!--begin::Title-->
                            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">Spin Management</h5>
                            <!--end::Title-->
                            <!--begin::Separator-->
                            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-5 bg-gray-200"></div>
                            <!--end::Separator-->
                            <!--begin::Toolbar-->
                            <div class="d-flex align-items-center">
                                <!--begin::Button-->
                                <a href="#" class=""></a>
                                <!--end::Button-->
                                <!--begin::Button-->
                                <a href="javascript:;" class="btn btn-light-primary font-weight-bold ml-2" title="Add Spin" data-toggle="modal" data-target="#exampleModalCustomScrollable">Add Spin</a>
                                <!--end::Button-->
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Subheader-->
                <!--begin::Entry-->
                <div class="d-flex flex-column-fluid">
                    <!--begin::Container-->
                    <div class="container">
                        <!--begin::Card-->
                        <div class="card card-custom gutter-b">
                            <!--begin::Body-->
                            <div class="card-body">
                                <!--begin: Datatable-->
                                <div class="datatable datatable-bordered datatable-head-custom" id="kt_datatable"></div>
                                <!--end: Datatable-->
                            </div>
                            <!--end::Body-->
                        </div>
                        <!--end::Card-->
                    </div>
                    <!--end::Container-->
                </div>
                <!--end::Entry-->
                <!-- Modal-->
                <div class="modal fade" id="exampleModalCustomScrollable" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Edit Spin</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <i aria-hidden="true" class="ki ki-close"></i>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div data-height="550">
                                    <!--begin::Form-->
                                    <div>
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label>Spin Value<span class="text-danger">*</span></label>
                                                <input name="spinValue" type="number" class="form-control" placeholder="Enter Spin Value" />
                                                <input name="id" type="text" class="form-control" placeholder="Enter username" hidden />
                                            </div>
                                            <div class="form-group">
                                                <label>Spin Frequency <span class="text-danger">*</span></label>
                                                <input type="number" name="spinFrequency" class="form-control" placeholder="Enter Spin Frequency" />
                                            </div>
                                        </div>
                                    </div>
                                    <!--end::Form-->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Close</button>
                                        <button type="button" onclick="updateSpin()" class="btn btn-primary font-weight-bold">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

