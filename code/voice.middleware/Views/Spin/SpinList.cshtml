        async function StatusActive(id, value) {
            if (value == "true") {
                var model = {
                    Id: id,
                    Active: false,
                    Deleted: false
                }
                const url = rootUrl + "/Spin/SpinStatusOrDelete";
                await doAjax(url, model, "POST");
            }
            else {
                var model = {
                    Id: id,
                    Active: true,
                    Deleted: false
                }
                const url = rootUrl + "/Spin/SpinStatusOrDelete";
                await doAjax(url, model, "POST");
            }
        }

        async function UserDelete(id) {
            var x = confirm("Are you sure you want to delete?");
            if (x) {
                var model = {
                    Id: id,
                    Active: false,
                    Deleted: true
                }
                const url = rootUrl + "/Spin/SpinStatusOrDelete";
                await doAjax(url, model, "POST");
                location.reload();
            }
            else
                return false;
        }

        $('#exampleModalCustomScrollable').on('show.bs.modal', function (e) {
            var id = $(e.relatedTarget).data('id');
            $(e.currentTarget).find('input[name="id"]').val(id);

            var value = $(e.relatedTarget).data('value');
            $(e.currentTarget).find('input[name="spinValue"]').val(value);

            var frequency = $(e.relatedTarget).data('frequency');
            $(e.currentTarget).find('input[name="spinFrequency"]').val(frequency);
        });

        async function updateSpin() {
            var model = {
                id: $("input[name=id]").val(),
                spinValue: $("input[name=spinValue]").val(),
                spinFrequency: $("input[name=spinFrequency]").val()
            }
            const url = rootUrl + "/Spin/SpinPersist";
            await doAjax(url, model, "POST");
            $('#exampleModalCustomScrollable').modal('toggle');
            location.reload();
        }

        async function addSpin() {
            var model = {
                spinValue: $("input[name=spinValue]").val(),
                spinFrequency: $("input[name=spinFrequency]").val(),
            }
            const url = rootUrl + "/Spin/SpinPersist";
