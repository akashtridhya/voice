@code {

    DashboardResponse dashboardResponse = new DashboardResponse();

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrWhiteSpace(SessionToken.Token))
        {
            var responseGet = await DashboardHelpers.GetDashboardData(SessionToken.Token);
            dashboardResponse = JsonConvert.DeserializeObject<DashboardResponse>(responseGet.data);
        }
        else
            NavManager.NavigateTo("/");
    }
